<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true">

    <Button
        android:id="@+id/BackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="33dp"
        android:layout_marginEnd="484dp"
        android:layout_marginRight="484dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/back"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ticketTaxTextView"
        android:layout_width="39dp"
        android:layout_height="23dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="48dp"
        android:text="@string/_0_00"
        app:layout_constraintStart_toEndOf="@+id/TaxLabel"
        app:layout_constraintTop_toBottomOf="@+id/ticketSubtotalTextView" />

    <TextView
        android:id="@+id/ticketTotalTextView"
        android:layout_width="39dp"
        android:layout_height="0dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="52dp"
        android:text="@string/_0_00"
        app:layout_constraintStart_toEndOf="@+id/TotalLabel"
        app:layout_constraintTop_toBottomOf="@+id/ticketTaxTextView" />

    <TextView
        android:id="@+id/ticketPriceTextView"
        android:layout_width="32dp"
        android:layout_height="21dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="144dp"
        android:text="@string/_0_00"
        app:layout_constraintStart_toEndOf="@+id/PriceLabel"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/PriceLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="316dp"
        android:clickable="false"
        android:editable="false"
        android:ems="10"
        android:enabled="true"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/ticket_price"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/QuantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="316dp"
        android:editable="false"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/quantity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PriceLabel" />

    <EditText
        android:id="@+id/SubtotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="316dp"
        android:layout_marginBottom="20dp"
        android:duplicateParentState="false"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Subtotal:"
        app:layout_constraintBottom_toTopOf="@+id/TaxLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuantityLabel"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/TaxLabel"
        android:layout_width="211dp"
        android:layout_height="54dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="316dp"
        android:editable="false"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/tax"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/QuantityLabel" />

    <EditText
        android:id="@+id/TotalLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="316dp"
        android:layout_marginRight="316dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="Total"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TaxLabel" />

    <EditText
        android:id="@+id/editTextTextPersonName6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="360dp"
        android:layout_marginRight="360dp"
        android:layout_marginBottom="320dp"
        android:editable="false"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="none"
        android:text="@string/payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/ticketQuantityTextView"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:layout_marginStart="140dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="32dp"
        android:text="@string/_0"
        app:layout_constraintStart_toEndOf="@+id/QuantityLabel"
        app:layout_constraintTop_toBottomOf="@+id/ticketPriceTextView" />

    <TextView
        android:id="@+id/ticketSubtotalTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="144dp"
        android:layout_marginLeft="144dp"
        android:layout_marginTop="24dp"
        android:text="@string/_0_00"
        app:layout_constraintStart_toEndOf="@+id/SubtotalLabel"
        app:layout_constraintTop_toBottomOf="@+id/ticketQuantityTextView" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="157dp"
        android:layout_height="44dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="40dp"
        android:text="Submit Order"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="12dp"
        android:clickable="true"
        android:contentDescription="1234"
        android:editable="true"
        android:ems="10"
        android:enabled="true"
        android:focusable="auto"
        android:hint="1234-1234-1234-1234"
        android:inputType="textPersonName"
        android:maxLength="19"
        android:textColor="#4C2323"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName4"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName2"
        android:layout_width="137dp"
        android:layout_height="44dp"
        android:layout_marginEnd="108dp"
        android:layout_marginRight="108dp"
        android:layout_marginBottom="12dp"
        android:duplicateParentState="false"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Card Number:"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName3"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="135dp"
        android:layout_height="45dp"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:layout_marginBottom="16dp"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Expiry Date:"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName5"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName4" />

    <View
        android:id="@+id/divider"
        android:layout_width="598dp"
        android:layout_height="1dp"
        android:layout_marginTop="28dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TotalLabel" />

    <EditText
        android:id="@+id/editTextTextPersonName4"
        android:layout_width="96dp"
        android:layout_height="51dp"
        android:layout_marginEnd="72dp"
        android:layout_marginRight="72dp"
        android:layout_marginBottom="12dp"
        android:editable="true"
        android:ems="10"
        android:hint="MM/YY"
        android:inputType="textPersonName"
        android:maxLength="5"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName7"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName5"
        android:layout_width="137dp"
        android:layout_height="48dp"
        android:layout_marginEnd="224dp"
        android:layout_marginRight="224dp"
        android:layout_marginBottom="124dp"
        android:duplicateParentState="false"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:text="Security Code"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/editTextTextPersonName7" />

    <EditText
        android:id="@+id/editTextTextPersonName7"
        android:layout_width="98dp"
        android:layout_height="47dp"
        android:layout_marginEnd="68dp"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="124dp"
        android:clickable="true"
        android:editable="true"
        android:ems="10"
        android:hint="123"
        android:inputType="textPersonName"
        android:maxLength="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>