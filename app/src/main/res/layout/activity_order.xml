<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/orderRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="598dp"
        android:layout_height="100dp"
        app:cardCornerRadius="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/showDateTextView"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:layout_alignLeft="@id/movieNametextView"
                android:layout_alignParentTop="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|center"
                android:layout_marginLeft="201dp"
                android:layout_marginRight="232dp"
                android:layout_marginBottom="0dp"
                android:text="Show Date" />

            <TextView
                android:id="@+id/movieNametextView"
                android:layout_width="169dp"
                android:layout_height="45dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="12dp"
                android:text="Movie Name" />

            <TextView
                android:id="@+id/theatreNameTextView"
                android:layout_width="177dp"
                android:layout_height="38dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center|top"
                android:layout_marginStart="194dp"
                android:layout_marginLeft="194dp"
                android:layout_marginRight="227dp"
                android:text="Theatre Name" />

            <TextView
                android:id="@+id/showTimeTextView"
                android:layout_width="171dp"
                android:layout_height="42dp"
                android:layout_alignParentBottom="true"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="0dp"
                android:text="Show Time" />

            <TextView
                android:id="@+id/quantityTextView"
                android:layout_width="219dp"
                android:layout_height="47dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_gravity="center|right"
                android:text="Number" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="163dp"
                android:layout_height="66dp"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/qrcode" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>