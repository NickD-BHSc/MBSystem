<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:padding="5dp"
    tools:context=".presentation.SeatingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Your Seating"
        android:textSize="25dp"
        android:layout_margin="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/seatPromptTextView"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seatRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_below="@id/seatPromptTextView"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Confirm Order"
        android:layout_margin="10dp"
        android:id="@+id/seatConfirmButton"
        android:layout_below="@id/seatRecyclerView"/>


</RelativeLayout>