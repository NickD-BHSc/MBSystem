<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:text="Select your snack"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        />


    <TextView
        android:id="@+id/hogDog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hotdog"
        android:textSize="25dp"
        android:layout_below="@id/title"
        android:layout_marginLeft="15dp"/>

    <ImageView
        android:id="@+id/hotdogView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/hogDog"
        android:src="@drawable/hotdog"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/popcorn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="popcorn"
        android:textSize="25dp"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"/>

    <ImageView
        android:id="@+id/poocornView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/hogDog"
        android:src="@drawable/porcorn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        />


    <TextView
        android:id="@+id/fries"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="fries"
        android:textSize="25dp"
        android:layout_toRightOf="@id/popcorn"
        android:layout_below="@id/title"
        android:layout_marginLeft="85dp"/>

    <ImageView
        android:id="@+id/friesView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/hogDog"
        android:layout_toRightOf="@id/popcorn"
        android:src="@drawable/fries"
        android:layout_marginLeft="85dp"
        />



    <TextView
        android:id="@+id/drink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="drink"
        android:textSize="25dp"
        android:layout_below="@id/hotdogView"
        android:layout_marginLeft="15dp"
        android:layout_marginTop= "22dp"/>




    <ImageView
        android:id="@+id/drinkView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/drink"
        android:src="@drawable/cocacola"
        android:layout_marginLeft="25dp"
        />

    <TextView
        android:id="@+id/noodle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="noodle"
        android:textSize="25dp"
        android:layout_below="@id/hotdogView"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="22dp"/>

    <ImageView
        android:id="@+id/noodleView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/noodle"
        android:src="@drawable/porcorn"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="25dp"
        />


    <TextView
        android:id="@+id/chips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="chips"
        android:textSize="25dp"
        android:layout_toRightOf="@id/noodle"
        android:layout_below="@id/poocornView"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="22dp"/>

    <ImageView
        android:id="@+id/chipsView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/chips"
        android:layout_toRightOf="@id/noodleView"
        android:src="@drawable/chips"
        android:layout_marginLeft="105dp"
        />



    <EditText
        android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/noodleView"
        android:ems="10"
        android:focusable="true"
        />


    <Button
        android:id="@+id/snackConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit"
        android:layout_marginTop="41dp"
        android:text="Snack Confirm"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />


</RelativeLayout>